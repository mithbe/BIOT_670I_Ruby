#!/usr/bin/env ruby
# frozen_string_literal: true
# Prevents modification of string literals

# Set the Gemfile path if not already set
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../Gemfile", __dir__)

require "rubygems"
# Load RubyGems to manage installed gems

require "bundler/setup"
# Set up gems listed in the Gemfile

# Run the 'rubocop' executable from the gem
load Gem.bin_path("rubocop", "rubocop")
