# Ignore version control
/.git/
/.gitignore

# Ignore Bundler config
/.bundle

# Ignore environment and key files
/.env*
/config/master.key
/config/credentials/*.key

# Ignore logs and temp files, but keep directory structure
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/.keep

# Ignore uploaded files and local storage
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Ignore compiled assets and node modules
/node_modules/
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets

# Ignore CI and deployment files
/.github
/config/deploy*.yml
/.kamal

# Ignore development and Docker config
/.devcontainer
/.dockerignore
/Dockerfile*
