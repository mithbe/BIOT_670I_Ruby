<!DOCTYPE html>
<html>
<head>
  <title>Rubra</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>
<!-- Top Banner -->
<header class="top-banner">
  <div class="logo-left">
    <%= image_tag "rubra_symbol.jpg", alt: "Rubra Logo", class: "banner-logo" %>
  </div>

  <div class="banner-content">
    <h1 class="site-name">Rubra</h1>
    <p class="slogan">The tether between scattered dandelions and rubber research</p>
  </div>

  <div class="user-actions">
    <% if user_signed_in? %>
      <span class="greeting">Hello, <%= current_user.email %>!</span>
      <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn small-btn" %>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn small-btn" %>
      <%= link_to "Sign In", new_user_session_path, class: "btn small-btn" %>
    <% end %>
  </div>
</header>

<!-- Flash messages -->
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<!-- Main content -->
<%= yield %>
</body>
</html>